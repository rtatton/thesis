\ProvidesPackage{slides}

\usepackage{core}

% Title page
\title{\rawThesisTitle}
\author{\thesisAuthor}
\institute{\thesisInstitution}
\date{\thesisDefenseDate}

% Remove all navigation symbols, except page numbers
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{footline}[frame number]

\usefonttheme[onlymath]{serif}

\renewcommand{\define}[1]{\textbf{#1}}

% Usage:
%   \begin{function}[position]{title}[args][spacing]
%     ...
%   \end{function}
\RenewDocumentEnvironment{function}{O{ht!} m O{}O{1.4}}{
    \begin{spacing}{#4}
    \begin{algorithmic}[1]
      \item[$\Call{#2}{#3}$]
}{
    \end{algorithmic}
    \end{spacing}
}

\captionsetup{labelfont=bf, font=tiny}

\newcommand{\squareFigHeight}{0.7\textheight}
\newcommand{\wideFigWidth}{\textwidth}

% Unified cross-referencing for figures, tables, and equations
\usepackage[nameinlink, capitalize, noabbrev]{cleveref}
\newcommand{\crefconjunction}{\textendash}
\Crefname{equation}{Equation}{Equations}
\crefname{equation}{}{}

 % Bibliography citations
 % https://ctan.org/pkg/biblatex
\usepackage[backend=biber, natbib=true, sortcites=true]{biblatex}
\addbibresource{thesis.bib}
\DeclareFieldFormat{titlecase}{\MakeSentenceCase*{#1}}

% Set the font size of bibliography entries.
\AtBeginBibliography{\scriptsize}